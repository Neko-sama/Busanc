                                                <% if( arr_estados[i] == 1 || vpermiso0){ %>
                                                <button id="<%=arr_ids[i]; %>" onclick="getid(this)" class="btn btn-primary btn-xs" style="width: 130px;"><i class="fa fa-edit"-></i> Registro Validación</button>
